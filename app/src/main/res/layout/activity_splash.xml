<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.nepalicoders.nepbayapp.activities.SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-130dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingBottom="48dp"
        android:id="@+id/logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_nepbay_full"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-light"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:id="@+id/desc"
        android:text="The Future of Online Shopping is Here"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/copyright"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:id="@+id/version"
        android:text="\u00A9 Copyright 2016, NepBay Inc"/>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/loading"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        app:cpv_thickness="1dp"
        android:layout_above="@+id/version"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="11sp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal"
        android:id="@+id/copyright"
        android:text="Made in Nepal, Designed for the World"/>

</RelativeLayout>
