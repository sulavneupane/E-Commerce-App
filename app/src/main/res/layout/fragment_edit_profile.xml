<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/colorText"
                app:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/edit_username_label"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="@string/username"
                        android:textColor="@color/colorText"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/orders_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_username"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_alignBaseline="@+id/edit_username_label"
                        android:layout_toRightOf="@+id/edit_username_label"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:textColor="@color/colorText"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/orders_title" />

                    <TextView
                        android:id="@+id/edit_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_username_label"
                        android:layout_marginTop="18dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/name_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_name_label"
                        android:layout_toRightOf="@+id/edit_password_label"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minWidth="@dimen/width_edit_text_fname"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText" />

                    <EditText
                        android:id="@+id/edit_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_name_label"
                        android:layout_toRightOf="@+id/edit_first_name"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minWidth="@dimen/width_edit_text_lname"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/edit_email_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_name_label"
                        android:layout_marginTop="@dimen/margin_top_edit"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/email_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_email_label"
                        android:layout_toRightOf="@+id/edit_password_label"
                        android:clickable="true"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/edit_mobile_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_email_label"
                        android:layout_marginTop="@dimen/margin_top_edit"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="12dp"
                        android:text="@string/mobile_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_mobile_label"
                        android:layout_toRightOf="@+id/edit_password_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/edit_phone_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_mobile_label"
                        android:layout_marginTop="@dimen/margin_top_edit"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="12dp"
                        android:text="@string/phone_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_alignBaseline="@+id/edit_phone_label"
                        android:layout_toRightOf="@+id/edit_password_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minWidth="@dimen/width_edit_text_user"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/edit_password_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_phone_label"
                        android:layout_marginBottom="@dimen/margin_top_edit"
                        android:layout_marginTop="@dimen/margin_top_edit"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="12dp"
                        android:text="@string/edit_password_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_alignBaseline="@+id/edit_password_label"
                        android:layout_toRightOf="@id/edit_password_label"
                        android:fontFamily="sans-serif-light"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:text="aaaaaaaaaa"
                        android:textColor="@color/colorPrimaryText" />

                    <ImageView
                        android:id="@+id/edit_password_button"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignBottom="@+id/edit_password_label"
                        android:layout_toRightOf="@id/edit_password"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit_1"
                        android:background="@drawable/border"
                        android:tint="@color/colorAccent" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/colorText"
                app:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/edit_billing_address_label"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="@string/address_label"
                        android:textColor="@color/colorText"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/orders_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_billing_address_country_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit_billing_address_label"
                        android:layout_marginTop="@dimen/margin_top_edit"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/country_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_billing_address_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_billing_address_country_label"
                        android:layout_toRightOf="@+id/edit_billing_address_1_label"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minWidth="@dimen/width_edit_text_user"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/edit_billing_address_state_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_billing_address_country_label"
                        android:layout_marginTop="@dimen/margin_top_edit"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/state_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_billing_address_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/edit_billing_address_state_label"
                        android:layout_toRightOf="@+id/edit_billing_address_1_label"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minWidth="@dimen/width_edit_text_user"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/edit_billing_address_city_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_billing_address_state_label"
                        android:layout_marginTop="@dimen/margin_top_edit"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/city_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_billing_address_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/edit_billing_address_city_label"
                        android:layout_toRightOf="@+id/edit_billing_address_1_label"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minWidth="@dimen/width_edit_text_user"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/edit_billing_address_zip_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_billing_address_city_label"
                        android:layout_marginTop="@dimen/margin_top_edit"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/zip_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_billing_address_zip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/edit_billing_address_zip_label"
                        android:layout_toRightOf="@+id/edit_billing_address_1_label"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minWidth="@dimen/width_edit_text_user"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:id="@+id/edit_billing_address_1_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_billing_address_zip_label"
                        android:layout_marginTop="@dimen/margin_top_edit"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/billing_address_1_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_billing_address_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/edit_billing_address_1_label"
                        android:layout_toRightOf="@id/edit_billing_address_1_label"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minWidth="@dimen/width_edit_text_user"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText" />


                    <TextView
                        android:id="@+id/edit_billing_address_2_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edit_billing_address_1_label"
                        android:layout_marginBottom="@dimen/margin_top_edit"
                        android:layout_marginTop="@dimen/margin_top_edit"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/billing_address_2_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_billing_address_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/edit_billing_address_2_label"
                        android:layout_toRightOf="@id/edit_billing_address_2_label"
                        android:fontFamily="sans-serif-light"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:minWidth="@dimen/width_edit_text_user"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/order_process_place_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view"
                android:layout_margin="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="bottom"
                app:cardBackgroundColor="@color/colorText"
                app:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_cancel_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="@string/cancel"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/address_font_size" />

                    <TextView
                        android:id="@+id/user_save_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="@string/save"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/address_font_size" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>