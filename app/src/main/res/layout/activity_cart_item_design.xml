<?xml version="1.0" encoding="utf-8"?>


    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

        <TableRow>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/cart_product_icon"
                    android:src="@drawable/ic_profile"
                    />

            </FrameLayout>

            <LinearLayout android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_item_name"
                    android:text="Android phone"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_item_price"
                    android:text="Rs.3200"
                    android:textColor="?attr/colorPrimaryDark"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="14sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_item_seller"
                    android:text="By: Rebook"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <RelativeLayout android:layout_width="90dp"
                android:layout_height="match_parent"
                >

                <android.support.v7.widget.Toolbar
                android:id="@+id/cart_toolbar"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="6dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"/>



                <EditText
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_et_qty"
                    android:layout_below="@+id/cart_toolbar"
                    android:padding="8dp"
                    android:inputType="number"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_item_txt_qty"
                    android:layout_below="@+id/cart_toolbar"
                    android:text="Qty"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:padding="8dp"
                    android:textSize="14sp"
                    />

                </RelativeLayout>

        </TableRow>
    <TableRow
        android:layout_marginTop="16dp"
        android:background="@color/grey_50"
        android:id="@+id/border">
        <View android:layout_height="1dp"
            android:layout_width="match_parent"/>
    </TableRow>

    </TableLayout>

