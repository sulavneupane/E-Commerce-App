<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText"
    tools:context="com.support.android.NepBay.Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/username_label"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="@string/username"
                        android:textColor="@color/colorText"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/orders_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_alignBaseline="@+id/username_label"
                        android:layout_toRightOf="@+id/username_label"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="Username"
                        android:textColor="@color/colorText"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/orders_title" />


                    <TextView
                        android:id="@+id/user_edit_button"
                        android:layout_width="84dp"
                        android:layout_height="42dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/colorAccent"
                        android:fontFamily="sans-serif-medium"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:text="Edit"
                        android:textColor="@color/colorText" />


                    <TextView
                        android:id="@+id/name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/username_label"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/name_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/name_label"
                        android:layout_toRightOf="@+id/name_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/name_label"
                        android:layout_toRightOf="@+id/first_name"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/email_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_label"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/email_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/email_label"
                        android:layout_toRightOf="@+id/email_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/mobile_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email_label"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/mobile_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/mobile_label"
                        android:layout_toRightOf="@+id/mobile_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/phone_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mobile_label"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/phone_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/phone_label"
                        android:layout_toRightOf="@+id/phone_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/billing_address_label"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="@string/address_label"
                        android:textColor="@color/colorText"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/orders_title"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/billing_address_country_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/billing_address_label"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/country_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/billing_address_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/billing_address_country_label"
                        android:layout_toRightOf="@id/billing_address_country_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/billing_address_state_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/billing_address_country_label"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/state_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/billing_address_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/billing_address_state_label"
                        android:layout_toRightOf="@id/billing_address_state_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/billing_address_city_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/billing_address_state_label"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/city_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/billing_address_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/billing_address_city_label"
                        android:layout_toRightOf="@id/billing_address_city_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/billing_address_zip_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/billing_address_city_label"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/zip_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/billing_address_zip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/billing_address_zip_label"
                        android:layout_toRightOf="@id/billing_address_zip_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                    <TextView
                        android:id="@+id/billing_address_1_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/billing_address_zip_label"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/billing_address_1_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/billing_address_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/billing_address_1_label"
                        android:layout_toRightOf="@id/billing_address_1_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />


                    <TextView
                        android:id="@+id/billing_address_2_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/billing_address_1_label"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/billing_address_2_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/billing_address_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/billing_address_2_label"
                        android:layout_toRightOf="@id/billing_address_2_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/profile_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/total_order_label"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="@string/total_order_label"
                        android:textColor="@color/colorText"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/orders_title"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/total_order_label"
                        android:layout_toRightOf="@+id/total_order_label"
                        android:fontFamily="sans-serif-medium"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorText"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/orders_title" />

                    <TextView
                        android:id="@+id/approved_order_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/pending_order_label"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:paddingLeft="12dp"
                        android:text="@string/approved_order_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/approved_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/pending_order"
                        android:layout_below="@+id/approved_order_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="29dp"
                        android:text="00"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pending_order_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/total_order_label"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:text="@string/pending_order_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pending_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pending_order_label"
                        android:layout_centerHorizontal="true"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="00"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/rejected_order_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/pending_order_label"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:paddingRight="12dp"
                        android:text="@string/rejected_order_label"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rejected_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/pending_order"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/rejected_order_label"
                        android:clickable="true"
                        android:fontFamily="sans-serif-light"
                        android:paddingRight="32dp"
                        android:text="00"
                        android:textColor="@color/colorPrimaryText"
                        android:textIsSelectable="true"
                        android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="22sp"
        android:visibility="gone"
        android:id="@+id/noInternetMessage"
        android:fontFamily="sans-serif-light"
        android:text="@string/no_internet"/>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true"
        app:cpv_thickness="1dp" />


</RelativeLayout>