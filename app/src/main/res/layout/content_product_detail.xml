<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nepalicoders.nepbayapp.activities.ProductDetail"
    tools:showIn="@layout/activity_product_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="?attr/actionBarSize">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/colorText"
                app:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="4dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:id="@+id/product_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Product Name"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/black"
                            android:textSize="22sp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:id="@+id/product_detail_product_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Product Code"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/product_detail_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="Rs 0000.00"
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/product_detail_offer_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="(Rs 0000.00)"
                                android:visibility="gone"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp" />

                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/colorText"
                app:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="4dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <TextView
                            android:id="@+id/product_detail_seller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Seller"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/product_detail_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/colorPrimaryText" />
                    </TableRow>
                </TableLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/product_detail_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="8dp"
                android:paddingRight="16dp"
                android:fontFamily="sans-serif-light"
                android:text="View More Info on Web >>"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>